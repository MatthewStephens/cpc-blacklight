!!!
%html
  %head
    %title= h(@page_title || 'Connecting Presidential Collections')
    = favicon_link_tag asset_path('favicon.gif')
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = raw render_head_content

  %body{onload: onload_method, class: render_body_class.html_safe}
    #page
      #hd
        #logo
          %h1.site_title
            = link_to 'Connecting Presidential Collections', '/'
            = content_tag(:span, 'Search Results', id: :results_text) if (params[:controller] == 'catalog' and !params[:id])
        #user_util_links= render '/user_util_links'

      #bd
        #main
          #main_container
            = render '/flash_msg'
            = yield
        #sidebar= sidebar_items.join.html_safe

      #ft= raw @footer
